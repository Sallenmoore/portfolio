extends layout

block content
      h1= title
      h2.text-center Create your portfolio
      div(ng-controller='createCtrl as create')
            div.container
                  form(name='initialForm', ng-submit='initialForm.$valid',action='/users', method='POST' novalidate)
                        div.row
                              label.col-md-1 Name
                              |       
                              input.col-md-2(type='text', name='name',ng-model='create.name' required)
                              |  
                        div.row
                              label.col-md-1 Email
                              |  
                              input.col-md-2(type='text', name='email_id',ng-model='create.email' required)
                              |
                        div.row  
                              label.col-md-1 Skills
                              |  
                              input.col-md-2(type='text', name='skills',ng-model='create.skills' required)
                              |
                        div.row
                              label.col-md-1 Summary
                              |  
                              input.col-md-6(type='text', name='summary',ng-model='create.summary' required)
                              |
                        div.row
                              div.col-md-2
                                    p  
                                          input.btn.btn-primary(type='submit', value='Create Portfolio',ng-click='create.checkSubmission()')
                  p 
                        span Name :  
                              span(ng-show='create.check && initialForm.$valid') {{create.name}} {{create.check}}

                  p 
                        span Email : 
                              span(ng-show='create.check && initialForm.$valid') {{create.email}}
                  p 
                        span Skills : 
                              span(ng-show='create.check && initialForm.$valid') {{create.skills}}
                  p 
                        span Summary : 
                              span(ng-show='create.check && initialForm.$valid') {{create.summary}}

                  p Form is {{initialForm.$valid}}
