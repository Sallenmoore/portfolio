extends layout

block content
      
      link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
      script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js')
      script(src="/angulartest.js")
      body(ng-app='display')
      h1= title
      h2.text-center Create your portfolio
      div.container
            form(action='/users', method='POST')
                  
                        div.row
                              label.col-md-1 Name
                              |       
                              input.col-md-2(type='text', name='name',ng-model='test.name')
                              |  
                        div.row
                              label.col-md-1 Email
                              |  
                              input.col-md-2(type='text', name='email_id',ng-model='test.email')
                              |
                        div.row  
                              label.col-md-1 Skills
                              |  
                              input.col-md-2(type='text', name='skills',ng-model='test.skills')
                              |
                        div.row
                              label.col-md-1 Summary
                              |  
                              input.col-md-6(type='text', name='summary',ng-model='test.summary')
                              |
                        div.row
                              div.col-md-2
                                    p  
                                          input.btn.btn-primary(type='submit', value='Create Portfolio',ng-click='test.check = true')
            p 
                  span Name :  
                        span(ng-show='test.check') {{test.name}}
            p 
                  span Email : 
                        span(ng-show='test.check') {{test.email}}
            p 
                  span Skills : 
                        span(ng-show='test.check') {{test.skills}}
            p 
                  span Summary : 
                        span(ng-show='test.check') {{test.summary}}
